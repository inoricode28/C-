@model IEnumerable<ProyNeptunoCoreMVC.Models.Pedido>

@{
    ViewData["Title"] = "PedidosPorCliente";
}

<h1>PedidosPorCliente</h1>

<!-- Formulario MVC Html Helpers -->
@using (Html.BeginForm())
{
    <div>
        @*
        Codigo del Cliente: @Html.TextBox("idcliente")
        *@

        Seleccione Cliente: @Html.DropDownList("idcliente", 
                                ViewBag.lista_clientes as SelectList )

        <button class="btn btn-primary">Consultar</button> |
        @Html.ActionLink("Regresar al Menu", "Index", "Menu", null, 
                         new {@class = "btn btn-warning"})
    </div>    
}
<br/>


<div>
    <p>
        Cantidad de Pedidos - ViewBag : @ViewBag.Cant_Pedidos
        <br/>
        Suma de Cargos - ViewBag : @ViewBag.Suma_Cargos
    </p>
    <p>
        Cantidad de Pedidos - ViewData : @ViewData["Cantidad2"]
    </p>
    <p>
        Suma de Cargos - TempData : @TempData["Suma_Cargos2"]
    </p>
</div>
<br/>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionDestinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CiudadDestinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionDestinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodPostalDestinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisDestinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eliminado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destinatario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionDestinatario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CiudadDestinatario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionDestinatario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodPostalDestinatario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisDestinatario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eliminado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClienteNavigation.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Apellidos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPedido">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPedido">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPedido">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
